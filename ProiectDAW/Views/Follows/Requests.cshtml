@model IEnumerable<ProiectDAW.Models.Follow>

@{
    ViewData["Title"] = "Follow Requests";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">Follow Requests</h1>
            <p class="lead text-muted">Manage requests from users who want to follow you.</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-inbox fs-4 d-block mb-3"></i>
            You have no pending follow requests.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var request in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body text-center">
                            @if (!string.IsNullOrEmpty(request.Follower.ProfilePicturePath))
                            {
                                <img src="@request.Follower.ProfilePicturePath" class="rounded-circle mb-3" style="width: 100px; height: 100px; object-fit: cover;" alt="@request.Follower.FirstName @request.Follower.LastName">
                            }
                            else
                            {
                                <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 100px; height: 100px; color: white; font-size: 2.5rem;">
                                    @(request.Follower.FirstName?[0])@(request.Follower.LastName?[0])
                                </div>
                            }
                            
                            <h5 class="card-title">@request.Follower.FirstName @request.Follower.LastName</h5>
                            
                            <div class="d-grid gap-2 mt-4">
                                <form asp-action="AcceptRequest" asp-controller="Follows" method="post" class="d-grid">
                                    <input type="hidden" name="requestId" value="@request.Id" />
                                    <button type="submit" class="btn btn-primary">Accept</button>
                                </form>
                                <form asp-action="DeclineRequest" asp-controller="Follows" method="post" class="d-grid">
                                    <input type="hidden" name="requestId" value="@request.Id" />
                                    <button type="submit" class="btn btn-outline-danger">Decline</button>
                                </form>
                            </div>
                        </div>
                        <div class="card-footer text-muted text-center small bg-transparent border-top-0">
                            Received: @request.RequestDate.ToString("dd MMM yyyy")
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
