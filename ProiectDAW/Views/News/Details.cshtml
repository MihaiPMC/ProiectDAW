@model ProiectDAW.Models.NewsArticle

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">News</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <!-- Article Header -->
    <div class="mb-4 text-center position-relative">
        <h1 class="display-4 fw-bold">@Model.Title</h1>
        <p class="text-muted">
            Published by <a asp-controller="Profile" asp-action="ViewProfile" asp-route-id="@Model.EditorId" class="text-decoration-none"><strong>@Model.Editor.FirstName @Model.Editor.LastName</strong></a> 
            on @Model.CreatedDate.ToString("f")
            @if(Model.IsEdited)
            {
                <span class="fst-italic ms-1">(edited)</span>
            }
        </p>

        @if (User.Identity.IsAuthenticated)
        {
            var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            if (User.IsInRole("Administrator") || currentUserId == Model.EditorId)
            {
                <div class="mb-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary me-2">
                        <i class="bi bi-pencil"></i> Edit Article
                    </a>
                    <!-- Button trigger modal for Delete -->
                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteArticleModal">
                        <i class="bi bi-trash"></i> Delete Article
                    </button>
                </div>

                <!-- Delete Modal -->
                <div class="modal fade" id="deleteArticleModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Delete Article?</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete "<strong>@Model.Title</strong>"? This action cannot be undone.
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

        @if (!string.IsNullOrEmpty(Model.CoverImagePath))
        {
            <img src="@Model.CoverImagePath" class="img-fluid rounded mb-3 shadow-sm" style="max-height: 500px; width: 100%; object-fit: cover;" alt="Cover Image">
        }
    </div>

    <!-- Article Content (Rich Text) -->
    <div class="d-flex gap-4">
        <!-- Voting Sidebar -->
        <div class="d-flex flex-column align-items-center vote-container" data-article-id="@Model.Id">
            @{
                int currentVote = 0;
                if (ViewData["UserArticleVote"] is int v)
                {
                    currentVote = v;
                }

                int score = 0;
                if (ViewData["ArticleScore"] is int s)
                {
                    score = s;
                }
            }
            <button class="btn btn-link text-decoration-none p-0 vote-btn upvote @(currentVote == 1 ? "active-up" : "")" 
                    onclick="voteArticle(this, @Model.Id, 1)">
                <i class="bi bi-arrow-up-circle-fill display-6"></i>
            </button>
            
            <span class="fw-bold fs-4 my-1 score-display">@score</span>
            
            <button class="btn btn-link text-decoration-none p-0 vote-btn downvote @(currentVote == -1 ? "active-down" : "")" 
                    onclick="voteArticle(this, @Model.Id, -1)">
                <i class="bi bi-arrow-down-circle-fill display-6"></i>
            </button>
        </div>

        <div class="article-content fs-5 mb-5 flex-grow-1">
            @Html.Raw(Model.Content)
        </div>
    </div>

    <hr class="my-5" />

    <!-- AI Trust Section (Placeholder) -->
    @if(Model.TrustScore.HasValue)
    {
        <div class="alert alert-info rounded-xl border-0 shadow-sm">
            <h5 class="alert-heading"><i class="bi bi-robot"></i> AI Fact Check</h5>
            <p><strong>Trust Label:</strong> @Model.TrustLabel</p>
            <p><strong>Score:</strong> @Model.TrustScore</p>
            <hr>
            <p class="mb-0">@Model.AiJustification</p>
        </div>
    }

    <!-- Comments Section -->
    <div class="comments-section bg-light p-4 rounded-xl shadow-sm">
        <h3 class="mb-4">Comments (@Model.Comments.Count)</h3>

        @if (User.Identity.IsAuthenticated)
        {
            <form asp-action="AddComment" method="post" class="mb-5">
                <input type="hidden" name="articleId" value="@Model.Id" />
                <div class="d-flex flex-column gap-2">
                    <textarea name="content" class="form-control" placeholder="Write a comment..." rows="3" required></textarea>
                    <div class="text-end">
                        <button class="btn btn-primary" type="submit">Post Comment</button>
                    </div>
                </div>
            </form>
        }
        else
        {
            <div class="alert alert-secondary text-center">
                <a asp-area="Identity" asp-page="/Account/Login" class="fw-bold text-decoration-none">Log in</a> to post a comment.
            </div>
        }

        <div class="list-group list-group-flush bg-transparent">
            @{
                // Pass EditorId to partials for moderation rights check
                ViewData["EditorId"] = Model.EditorId;
            }
            @foreach (var comment in Model.Comments.Where(c => c.ParentCommentId == null).OrderByDescending(c => c.PostedDate))
            {
                 @await Html.PartialAsync("_CommentPartial", comment, ViewData)
            }
            @if (!Model.Comments.Any())
            {
                <div class="text-center py-4">
                    <i class="bi bi-chat-square-text display-4 text-muted opacity-25"></i>
                    <p class="text-muted mt-3">No comments yet. Be the first to say something!</p>
                </div>
            }
        </div>
    </div>
</div>

<script>
    function toggleReplyForm(commentId) {
        var form = document.getElementById('reply-form-' + commentId);
        if (form.classList.contains('d-none')) {
            form.classList.remove('d-none');
        } else {
            form.classList.add('d-none');
        }
    }

    function toggleEditComment(commentId) {
        var textDiv = document.getElementById('comment-text-' + commentId);
        var formDiv = document.getElementById('edit-form-' + commentId);
        
        if (formDiv.classList.contains('d-none')) {
            formDiv.classList.remove('d-none');
            textDiv.classList.add('d-none');
        } else {
            formDiv.classList.add('d-none');
            textDiv.classList.remove('d-none');
        }
    }
</script>
