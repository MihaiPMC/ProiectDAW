@model ProiectDAW.Controllers.ManageMembersViewModel
@{
    ViewData["Title"] = "Gestionează Membri - " + Model.GroupName;
}

<div class="container mt-4">
    <h2><i class="bi bi-people-fill"></i> Gestionează Membri - @Model.GroupName</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">
                        <i class="bi bi-clock"></i> Cereri în Așteptare (@Model.PendingMembers.Count)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.PendingMembers.Any())
                    {
                        <div class="list-group">
                            @foreach (var member in Model.PendingMembers)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@member.UserName</h6>
                                            <small class="text-muted">
                                                Cerere din: @member.RequestDate.ToString("dd MMM yyyy HH:mm")
                                            </small>
                                        </div>
                                        <div class="btn-group" role="group">
                                            <form asp-action="AcceptMember" method="post" style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="membershipId" value="@member.MembershipId" />
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="bi bi-check-circle"></i> Acceptă
                                                </button>
                                            </form>
                                            <form asp-action="RemoveMember" method="post" style="display: inline;" 
                                                  onsubmit="return confirm('Ești sigur că vrei să respingi această cerere?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="membershipId" value="@member.MembershipId" />
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="bi bi-x-circle"></i> Respinge
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center mb-0">
                            <i class="bi bi-info-circle"></i> Nu există cereri în așteptare.
                        </p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-check-circle"></i> Membri Acceptați (@Model.AcceptedMembers.Count)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.AcceptedMembers.Any())
                    {
                        <div class="list-group">
                            @foreach (var member in Model.AcceptedMembers)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@member.UserName</h6>
                                            <small class="text-muted">
                                                Membru din: @member.RequestDate.ToString("dd MMM yyyy")
                                            </small>
                                        </div>
                                        <form asp-action="RemoveMember" method="post" 
                                              onsubmit="return confirm('Ești sigur că vrei să elimini acest membru?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="membershipId" value="@member.MembershipId" />
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="bi bi-person-dash"></i> Elimină
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center mb-0">
                            <i class="bi bi-info-circle"></i> Nu există membri acceptați încă.
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Details" asp-route-id="@Model.GroupId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Înapoi la Grup
        </a>
    </div>
</div>

