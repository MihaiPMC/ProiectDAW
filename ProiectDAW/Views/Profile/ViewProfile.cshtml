@model ProiectDAW.Controllers.ViewProfileViewModel
@using System.Text.RegularExpressions

@functions {
    public string StripHtml(string input)
    {
        if (string.IsNullOrEmpty(input)) return string.Empty;
        // Decode HTML entities (e.g., &nbsp;) and then strip tags
        var noHtml = Regex.Replace(input, "<.*?>", string.Empty);
        return System.Web.HttpUtility.HtmlDecode(noHtml).Trim();
    }
}
@{
    ViewData["Title"] = $"{Model.FirstName} {Model.LastName}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                    {
                        <img src="@Model.ProfilePicturePath" 
                             alt="@Model.FirstName @Model.LastName" 
                             class="rounded-circle mb-3"
                             style="width: 150px; height: 150px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="rounded-circle bg-secondary text-white mx-auto mb-3 d-flex align-items-center justify-content-center"
                             style="width: 150px; height: 150px;">
                            <span class="h1 mb-0">@Model.FirstName[0]@Model.LastName[0]</span>
                        </div>
                    }
                    
                    <h3 class="card-title">@Model.FirstName @Model.LastName</h3>
                    
                    @if (Model.IsEditor)
                    {
                        <span class="badge bg-primary mb-2">
                            <i class="bi bi-pen"></i> Editor
                        </span>
                    }
                    
                    @if (Model.IsProfilePrivate)
                    {
                        <p class="text-muted">
                            <i class="bi bi-lock"></i> Private Profile
                        </p>
                    }
                    else
                    {
                        <p class="text-muted">
                            <i class="bi bi-globe"></i> Public Profile
                        </p>
                    }
                    
                    @if (User.Identity.IsAuthenticated && User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == Model.UserId)
                    {
                        <a asp-action="Edit" class="btn btn-primary w-100 mb-2">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-outline-secondary w-100 mb-2">
                            <i class="bi bi-gear"></i> Account Settings
                        </a>
                        <a asp-controller="Follows" asp-action="Requests" class="btn btn-info w-100 mb-2 text-white">
                            <i class="bi bi-person-plus"></i> Follow Requests
                        </a>
                    }
                    else if (User.Identity.IsAuthenticated)
                    {
                        @if (Model.IsFollowing)
                        {
                            <form asp-controller="Follows" asp-action="Unfollow" method="post" onsubmit="return confirm('Are you sure you want to unfollow this user?');">
                                <input type="hidden" name="userId" value="@Model.UserId" />
                                <button type="submit" class="btn btn-outline-danger w-100 mb-2">
                                    <i class="bi bi-person-dash"></i> Unfollow
                                </button>
                            </form>
                        }
                        else if (Model.CurrentUserFollowStatus == ProiectDAW.Models.FollowStatus.Pending)
                        {
                            <button class="btn btn-secondary w-100 mb-2" disabled>
                                <i class="bi bi-hourglass-split"></i> Requested
                            </button>
                        }
                        else
                        {
                            <form asp-controller="Follows" asp-action="SendRequest" method="post">
                                <input type="hidden" name="userId" value="@Model.UserId" />
                                <button type="submit" class="btn btn-primary w-100 mb-2">
                                    <i class="bi bi-person-plus"></i> Follow
                                </button>
                            </form>
                        }
                    }
                    
                    <p class="text-muted small">
                        <i class="bi bi-calendar"></i> Member since @Model.CreatedAt.ToString("MMMM yyyy")
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">About</h4>
                    
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="card-text">@Model.Description</p>
                    }
                    else
                    {
                        <p class="card-text text-muted">No description added.</p>
                    }
                    
                    @if (Model.IsLimitedView)
                    {
                        <div class="alert alert-info mt-3">
                            <i class="bi bi-lock"></i> This profile is private. You can only see basic information.
                        </div>
                    }
                    else
                    {
                        <hr />
                        
                        <div class="row text-center mt-4">
                            <div class="col-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h2 class="mb-0">@Model.ArticlesCount</h2>
                                        <p class="text-muted mb-0">Published Articles</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h2 class="mb-0">@Model.FollowersCount</h2>
                                        <p class="text-muted mb-0">Followers</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        @if (Model.Articles != null && Model.Articles.Any())
                        {
                            <h4 class="mt-4">Recent Articles</h4>
                            <div class="list-group mt-3">
                                @foreach (var article in Model.Articles)
                                {
                                    <a asp-controller="News" asp-action="Details" asp-route-id="@article.Id" class="list-group-item list-group-item-action flex-column align-items-start">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h5 class="mb-1">@article.Title</h5>
                                            <small class="text-muted">@article.CreatedDate.ToString("dd MMM yyyy")</small>
                                        </div>
                                        <p class="mb-1 text-muted">
                                            @{
                                                var plainText = StripHtml(article.Content);
                                                if (plainText.Length > 150)
                                                {
                                                    @plainText.Substring(0, 150)<text>...</text>
                                                }
                                                else
                                                {
                                                    @plainText
                                                }
                                            }
                                        </p>
                                        <small class="text-primary">Read More <i class="bi bi-arrow-right"></i></small>
                                    </a>
                                }
                            </div>
                        }
                        else if (Model.IsEditor)
                        {
                            <div class="alert alert-light mt-3 text-center">
                                <p class="mb-0">This editor has not published any articles yet.</p>
                            </div>
                        }
                    }
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Search" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Search
        </a>
    </div>
</div>

