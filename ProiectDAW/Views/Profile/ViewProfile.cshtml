@model ProiectDAW.Controllers.ViewProfileViewModel
@{
    ViewData["Title"] = $"{Model.FirstName} {Model.LastName}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                    {
                        <img src="@Model.ProfilePicturePath" 
                             alt="@Model.FirstName @Model.LastName" 
                             class="rounded-circle mb-3"
                             style="width: 150px; height: 150px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="rounded-circle bg-secondary text-white mx-auto mb-3 d-flex align-items-center justify-content-center"
                             style="width: 150px; height: 150px;">
                            <span class="h1 mb-0">@Model.FirstName[0]@Model.LastName[0]</span>
                        </div>
                    }
                    
                    <h3 class="card-title">@Model.FirstName @Model.LastName</h3>
                    
                    @if (Model.IsEditor)
                    {
                        <span class="badge bg-primary mb-2">
                            <i class="bi bi-pen"></i> Editor
                        </span>
                    }
                    
                    @if (Model.IsProfilePrivate)
                    {
                        <p class="text-muted">
                            <i class="bi bi-lock"></i> Profil privat
                        </p>
                    }
                    else
                    {
                        <p class="text-muted">
                            <i class="bi bi-globe"></i> Profil public
                        </p>
                    }
                    
                    @if (User.Identity.IsAuthenticated && User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == Model.UserId)
                    {
                        <a asp-action="Edit" class="btn btn-primary w-100 mb-2">
                            <i class="bi bi-pencil"></i> Editează Profil
                        </a>
                    }
                    
                    <p class="text-muted small">
                        <i class="bi bi-calendar"></i> Membru din @Model.CreatedAt.ToString("MMMM yyyy")
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Despre</h4>
                    
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="card-text">@Model.Description</p>
                    }
                    else
                    {
                        <p class="card-text text-muted">Nicio descriere adăugată.</p>
                    }
                    
                    @if (Model.IsLimitedView)
                    {
                        <div class="alert alert-info mt-3">
                            <i class="bi bi-lock"></i> Acest profil este privat. Poți vedea doar informațiile de bază.
                        </div>
                    }
                    else
                    {
                        <hr />
                        
                        <div class="row text-center mt-4">
                            <div class="col-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h2 class="mb-0">@Model.ArticlesCount</h2>
                                        <p class="text-muted mb-0">Articole publicate</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h2 class="mb-0">@Model.FollowersCount</h2>
                                        <p class="text-muted mb-0">Urmăritori</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        @* Aici poți adăuga în viitor articolele recente ale editorului *@
                    }
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Search" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Înapoi la căutare
        </a>
    </div>
</div>

