@{
    ViewData["Title"] = "Home";
}

<div class="text-center py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="display-3 fw-bold mb-4">
                    Welcome to <span class="text-gradient">Pulse</span>
                </h1>
                <p class="lead text-muted mb-5 fs-4">
                    Your central hub for real-time updates, verified news, and community connection.
                </p>
                
                <div class="d-flex justify-content-center gap-3">
                    <a asp-controller="News" asp-action="Index" class="btn btn-primary btn-lg px-5 py-3">
                        <i class="bi bi-newspaper me-2"></i> Explore News
                    </a>
                    <a asp-controller="Profile" asp-action="Search" class="btn btn-outline-primary btn-lg px-5 py-3">
                        <i class="bi bi-search me-2"></i> Find Editors
                    </a>
                </div>
            </div>
        </div>
        
        <div class="row mt-5 pt-5 g-4">
            <div class="col-md-4">
                <div class="card h-100 p-4 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="text-primary mb-3">
                            <i class="bi bi-lightning-charge fs-1"></i>
                        </div>
                        <h3 class="h4 fw-bold">Real-time Updates</h3>
                        <p class="text-muted">Stay ahead with the latest stories as they happen, curated by trusted editors.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 p-4 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="text-primary mb-3">
                            <i class="bi bi-shield-check fs-1"></i>
                        </div>
                        <h3 class="h4 fw-bold">Verified Trust</h3>
                        <p class="text-muted">Our AI-powered trust score helps you identify reliable information instantly.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 p-4 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="text-primary mb-3">
                            <i class="bi bi-people fs-1"></i>
                        </div>
                        <h3 class="h4 fw-bold">Community</h3>
                        <p class="text-muted">Follow your favorite editors, join groups, and engage in meaningful discussions.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
